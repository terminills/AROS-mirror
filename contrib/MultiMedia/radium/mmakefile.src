      $(OBJ14) $(OBJ15) $(OBJ16) $(OBJ17) $(OBJ18)

FILES := $(OBJ)

EXEDIR := $(AROS_CONTRIB)/MultiMedia/Audio/Radium

NOWARN_FLAGS := \
    $(NOWARN_FORMAT_OVERFLOW)
USER_CFLAGS := $(NOWARN_FLAGS)
USER_INCLUDES := -I$(SRCDIR)/$(CURDIR)/$(AD) -I$(SRCDIR)/$(CURDIR)/$(AR) \
    -I$(SRCDIR)/$(CURDIR)/$(CD)
USER_CPPFLAGS := \
    -DVERSION=$(VERSION) \
    -DDISKVERSION=$(DISKVERSION) \
    -DPLAYERPRI=$(PLAYERPRI) \
    -DVERSION_LETTER="" \
    -D__int8_t_defined \
    -DAMIAROS \
    -DNO_INLINE_STDARG

# -DMEMORY_DEBUG
# -DSYSBASEDEBUG
# -DTRACKER_DEBUG
# -DMEMORY_DEBUG
# -DTRACKER_GB

%build_prog mmake=contrib-radium \
    progname=Radium targetdir=$(EXEDIR) \
    files=$(FILES) uselibs="realtime"

#MM
contrib-radium : $(EXEDIR)/Execute.Me

$(EXEDIR)/Execute.Me : $(SRCDIR)/$(CURDIR)/RADIUM.RUN
	$(MKDIR) $(EXEDIR)
	$(CP) $< $@
